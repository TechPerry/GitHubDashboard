
@inherits GitHubDashboard.Web.Features.Repositories.RepoDetails.RepoDetailsModel;
@page "/myrepos/{name}";
@*@layout GitHubDashboard.Web.Features.Layout.MainLayout;*@
@using GitHubDashboard.Domain.Models;


@if (!DataLoaded)
{
    <em>Loading....</em>
}
else
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header ">
                        <h4 class="card-title">
                            @Repo.Name
                            <small class="description">Branches, issues</small>
                        </h4>
                    </div>
                    <div class="card-body">
                        <ul class="nav nav-pills nav-pills-warning" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="tab" href="/myrepos/@Repo.Name#branches" role="tablist"
                                   onclick="@ActivateBranches">
                                    Branches
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="/myrepos/@Repo.Name#issues" role="tablist"
                                   onclick="@ActivateIssues">
                                    Issues
                                </a>
                            </li>
                        </ul>
                        <div class="tab-content tab-space">
                            <div class="tab-pane @BranchesActive" id="branches">
                                <RepoBranches Branches="@Branches"></RepoBranches>
                            </div>
                            <div class="tab-pane @IssuesActive" id="issues">
                                <RepoIssues Issues="@Issues"></RepoIssues>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


